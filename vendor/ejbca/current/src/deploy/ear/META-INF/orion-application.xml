<?xml version="1.0"?>

<orion-application  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://xmlns.oracle.com/oracleas/schema/orion-application-10_0.xsd"  deployment-version="10.1.3.3.0" autocreate-tables="false" default-data-source="jdbc/OracleDS" component-classification="external"
  schema-major-version="10" schema-minor-version="0" >
	<ejb-module remote="false" path="ejbca-ejb.jar" /> 
	<web-module id="publicweb" path="publicweb.war" />
	<web-module id="scep" path="scep.war" />
	<web-module id="status" path="status.war" />
	<web-module id="cmp" path="cmp.war" />
	<web-module id="healthcheck" path="healthcheck.war" />
	<web-module id="webdist" path="webdist.war" />
	<web-module id="adminweb" path="adminweb.war" />
	<web-module id="ejbcaws" path="ejbcaws.war" />
	<web-module id="xkms" path="xkms.war" />
	<web-module id="doc" path="doc.war" />
	<persistence path="persistence" />
	<imported-shared-libraries>
	    <!--
	      This is to work around a bug in OC4J 10 trying to use Apache Myfaces JSF implementation.
	      see thread http://forums.oracle.com/forums/thread.jspa?messageID=2112782
	     -->
	    <remove-inherited name="apache.commons.logging"></remove-inherited>
	</imported-shared-libraries>
	<principals path="principals.xml" />
	<jazn provider="XML" />
	<log>
		<file path="application.log" />
	</log>
</orion-application>
