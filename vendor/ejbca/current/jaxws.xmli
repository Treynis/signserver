<?xml version="1.0" encoding="UTF-8"?>

<project basedir="."  name="jaxws">
	
    <path id="jaxws.classpath">
    	<fileset dir="lib/jaxws">
    	  <include name="**/*.jar"/>
    	</fileset> 
    	<pathelement location="${java.home}/../lib/tools.jar"/>
    	<pathelement location="${build}"/>
    	<path refid="compile.classpath" />
    </path>
	
    <path id="jaxws.client.classpath">
    	<fileset dir="lib">
    	  <include name="**/*.jar"/>
    	</fileset> 
    	<fileset dir="lib/ext">
    	  <include name="**/*.jar"/>
    	</fileset> 
    	<pathelement location="${java.home}/../lib/tools.jar"/>
    	<pathelement location="tmp/jaxws/gen-classes/client"/>
    	<pathelement location="${build}"/>
    </path>
	
    <path id="jaxws.test.classpath">
    	<path refid="jaxws.client.classpath" />
    	<path refid="j2ee.classpath" />
    </path>
	
	
    <target name="ws.init" depends="init">
    	<mkdir dir="src/jaxws/gen-java/server"/>
    	<mkdir dir="src/jaxws/gen-java/client"/>
    	<mkdir dir="tmp/jaxws/gen-classes/server"/>
    	<mkdir dir="tmp/jaxws/gen-classes/client"/>
    </target>
	
    <target name="ws.cleansrc">
    	<delete dir="src/jaxws/gen-java/server"/>
    	<delete dir="src/jaxws/gen-java/client"/>
    </target>

	<taskdef name="apt" classname="com.sun.tools.ws.ant.Apt">
		<classpath refid="jaxws.classpath"/>
	</taskdef>
	
    <taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
        <classpath refid="jaxws.classpath"/>
    </taskdef>
	
	<target name="ws.gen.server" depends="ws.init" description="Generate JAX-WS server stubs when developing new WS-API calls.">
       <apt fork="true"  destdir="tmp/jaxws/gen-classes/server" 
            sourcedestdir="src/jaxws/gen-java/server" sourcepath="src/java"
            debug="true"
            deprecation="true">
		 <classpath>
		  <path refid="jaxws.classpath" /> 
		  <pathelement location="src" /> 
		 </classpath>
		 <option key="r" value="dist" />
		  <source dir="src/java">
		  	<include name="org/ejbca/core/protocol/ws/EjbcaWS.java"/>
		  </source>
		  </apt>
	</target>

    <target depends="ws.init" name="ws.build">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="on"  destdir="${build}" >
            <src path="${src.java}"/>
            <classpath refid="jaxws.classpath"/>
        	<exclude name="org/ejbca/core/protocol/ws/client/*.java"/>
        	<include name="org/ejbca/core/protocol/ws/**"/>
        </javac>
        <javac debug="on" destdir="tmp/jaxws/gen-classes/server" >
            <src path="src/jaxws/gen-java/server"/>
            <classpath refid="jaxws.classpath"/>        	
        </javac>

    </target>
	
	<target name="ejbcawsconditioncheck">
		<condition property="ejbcaws.conditionenabled">
			<istrue value="${ejbcaws.enabled}"/>
		</condition>
	</target>
	
	<!-- Part below is to be able to build a war file for ejbcaws with different 
	     jars in it depending on what the appserver needs -->
	<target name="jaxwslibswebsphere" depends="webspheretargetcheck" if="websphere.enabled">
		<echo>Websphere JAX-WS target</echo>
		<!-- In websphere we don't want any libs packaged in the war -->
        <delete>
          <fileset dir="${jaxws.libdir}" includes="**/*.jar"/>
        </delete>
        <copy todir="${jaxws.libdir}">
	        <fileset dir="dist" >
	        	<include name="ejbca-util.jar"/>
	        </fileset>
	        <fileset dir="${lib}" >
           	  <include name="ejbca-ejb.jar"/>
         	  <include name="log4j.jar"/>
         	  <include name="bc*.jar"/>
         	  <include name="commons-lang-*.jar"/>
	        </fileset>
	    </copy>
	</target>
	<target name="jaxwslibsstd">
        <!-- the default jaxws libs --> 
        <copy todir="${jaxws.libdir}">
	        <fileset dir="${lib}/jaxws" >
	        	<include name="*.jar"/>
	        </fileset>
	    </copy>
	</target>
	
	<target name="jaxwslibspre">
        <delete dir="${jaxws.libdir}" />
        <mkdir dir="${jaxws.libdir}" />
	</target>
	
	<target name="jaxwslibs" depends="jaxwslibspre,jaxwslibsstd,jaxwslibswebsphere">
	</target>
	
	<!-- Build the war file to be included in ejbca.ear -->
    <target name="ejbcaws.war" depends="ejbcawsconditioncheck,ws.build,jaxwslibs" if="ejbcaws.conditionenabled">
        <copy todir="tmp/jaxws/gen-classes/server">
    	  <fileset dir="${build}">
            <include name="org/ejbca/core/protocol/ws/**/*.class"/>
            <exclude name="org/ejbca/core/protocol/ws/client/**"/>
          </fileset>
        </copy>	
    	
    	<replace file="${eardd.src}/META-INF/application.xml" token="!--@ejbcaws.war@-->" value="module>&lt;web>&lt;web-uri>ejbcaws.war&lt;/web-uri>&lt;context-root>/${app.name}/ejbcaws&lt;/context-root>&lt;/web>&lt;/module>"/>
    	<copy tofile="tmp/jaxws/web.xml" file="src/jaxws/web.xml" overwrite="true"/>
    	<!-- Override the default web.xml with an appserver specific one, if there exists such -->
    	<copy tofile="tmp/jaxws/web.xml" file="src/jaxws/${appserver.type}/web.xml" overwrite="true" failonerror="false"/>
        <war warfile="${dist.dir}/ejbcaws.war" webxml="tmp/jaxws/web.xml">
            <webinf dir="src/jaxws" includes="sun-jaxws.xml, weblogic.xml, ibm-web-bnd.xmi"/>
            <classes dir="tmp/jaxws/gen-classes/server" excludes="**/*XKMS*"/>
         	<lib dir="${jaxws.libdir}" includes="*.jar"/>       		
        </war>
    </target>
	
	<!-- Build a standalone war file to be deployed independently of ejbca.ear -->
	<target name="ejbcaws.war.standalone" depends="ws.build">
        <copy todir="tmp/jaxws/gen-classes/server">
    	  <fileset dir="${build}">
            <include name="org/ejbca/core/protocol/ws/*.class"/>
            <include name="org/ejbca/core/protocol/ws/common/*.class"/>
            <include name="org/ejbca/core/protocol/ws/objects/*.class"/>            	
          </fileset>
        </copy>	
    	
    	<copy tofile="tmp/jaxws/web.xml" file="src/jaxws/web.xml" overwrite="true"/>
    	<!-- Override the default web.xml with an appserver specific one, if there exists such -->
    	<copy tofile="tmp/jaxws/web.xml" file="src/jaxws/${appserver.type}/web.xml" overwrite="true"/>
        <war warfile="${dist.dir}/ejbcaws.war" webxml="tmp/jaxws/web.xml">
            <webinf dir="src/jaxws" includes="sun-jaxws.xml, weblogic.xml, ibm-web-bnd.xmi"/>
            <classes dir="tmp/jaxws/gen-classes/server" excludes="**/*XKMS*"/>
         	<lib dir="dist">
         	 <include name="ejbca-util.jar"/>
         	</lib>
         	<lib dir="lib">
         	 <include name="ejbca-ejb.jar"/>
         	 <include name="log4j.jar"/>
         	 <include name="bc*.jar"/>
         	 <include name="commons-lang-*.jar"/>
         	</lib>
        </war>
    </target>
	
	<!-- Development targets below -->
    <target name="ws.gen.client" depends="ws.init" description="Generate JAX-WS client stubs when developing new WS-API calls.">
    	<echo>Note: The Application server must be on and deployed in order to generate client src.</echo>
        <wsimport 
                keep="true"
                extension="${extension}"
                destdir="tmp/jaxws/gen-classes/client"
        	    sourcedestdir="src/jaxws/gen-java/client"
                wsdl="http://localhost:8080/ejbca/ejbcaws/ejbcaws?wsdl">
            <binding dir="src/jaxws" includes="custom-client.xml, custom-schema.xml"/>
        </wsimport>
    </target>
	
    <target name="ws.build.client" depends="ws.init, ejbca-util.jar">
        <javac debug="true" destdir="tmp/jaxws/gen-classes/client" >
            <src path="src/jaxws/gen-java/client"/>
            <classpath refid="jaxws.client.classpath"/>        	
        </javac>
        <javac debug="true" destdir="${build}" >
            <src path="src/java"/>
            <classpath refid="jaxws.client.classpath"/>
        	<include name="org/ejbca/core/protocol/ws/client/*.java"/>            
        </javac>
    	
    	<mkdir dir="tmp/ejbcawscli.jar"/>
    	<mkdir dir="tmp/ejbcawscli.jar/META-INF"/>
    	<mkdir dir="dist/ejbcawscli/lib"/>

        <copy todir="tmp/ejbcawscli.jar">
            <fileset dir="${build}">
              <include name="org/ejbca/core/protocol/ws/client/*.class"/>
              <include name="org/ejbca/core/protocol/ws/common/*.class"/>
              <include name="org/ejbca/core/protocol/ws/objects/*.class"/>            	
              <include name="org/ejbca/util/PerformanceTest*.class"/>
            </fileset>	
            <fileset dir="tmp/jaxws/gen-classes/client">
              <include name="**/*.class"/>
            </fileset>	
            <fileset dir="${src.java}">
	              <include name="log4j.properties"/>
	              <include name="profilemappings.properties"/>
	        </fileset>
	    </copy> 
 
         <copy todir="dist/ejbcawscli/lib/endorsed">
	        <fileset dir="${lib}/jaxws">
				<include name="activation.jar" />
				<include name="FastInfoset.jar" />
			    <include name="http.jar" />
				<include name="jaxb-api.jar" />
			    <include name="jaxb-impl.jar" />
			    <include name="jaxb-xjc.jar" />
				<include name="jaxws-api.jar" />
			    <include name="jaxws-rt.jar" />
			    <include name="jsr173_api.jar" />
			 	<include name="jsr181-api.jar" />
			    <include name="jsr250-api.jar" />
				<include name="resolver.jar" />
			    <include name="saaj-api.jar" />
				<include name="saaj-impl.jar" />
				<include name="sjsxp.jar" />
			</fileset>
        </copy>
        <copy todir="dist/ejbcawscli/lib">
            <fileset dir="${lib}">
                <include name="log4j.jar"/>
                <include name="bcprov-jdk${java.ver}.jar"/>
                <include name="commons-lang-*.jar"/>
                <include name="cert-cvc.jar"/>
            </fileset>
            <fileset dir="${ejbca.home}/dist">
              <include name="ejbca-util.jar"/>         
            </fileset>	    
        </copy>
 
	    <copy todir="dist/ejbcawscli/">
            <fileset dir="${src}/jaxws/cli">
                <include name="*" />
            </fileset>
        </copy> 
        <chmod dir="dist/ejbcawscli/" includes="*.sh" perm="a+x"/>		
    	              
        <jar destfile="dist/ejbcawscli/ejbcawscli.jar" basedir="tmp/ejbcawscli.jar">
          <manifest>
          	<attribute name="Class-Path" value="lib/bcprov-jdk15.jar lib/cert-cvc.jar lib/ejbca-util.jar lib/log4j.jar lib/commons-lang-2.4.jar lib/endorsed/activation.jar lib/endorsed/FastInfoset.jar lib/endorsed/http.jar lib/endorsed/jaxb-api.jar lib/endorsed/jaxb-impl.jar lib/endorsed/jaxb-xjc.jar lib/endorsed/jaxws-api.jar lib/endorsed/jaxws-rt.jar lib/endorsed/jsr173_api.jar lib/endorsed/jsr181-api.jar lib/endorsed/jsr250-api.jar lib/endorsed/resolver.jar lib/endorsed/saaj-api.jar lib/endorsed/saaj-impl.jar lib/endorsed/sjsxp.jar"/>
            <attribute name="Main-Class" value="org.ejbca.core.protocol.ws.client.ejbcawsracli"/>
          </manifest>
        </jar>    	    	
    </target>

    <target name="ejbcaws.client" depends="ejbcawsconditioncheck,ws.build.client" if="ejbcawsconditioncheck" description="Build the EJBCA WS-API client"/>

    <!-- Compile JAXWS JUnit testcases -->
    <target name="test:compilews" depends="ws.build, ws.build.client">
        <mkdir dir="${test.dir}" />
        <javac srcdir="${test.src.dir}" destdir="${test.dir}" debug="on" includeantruntime="no" encoding="iso8859-1">
            <classpath refid="jaxws.test.classpath" />
        	<include name="org/ejbca/core/protocol/ws/Test*" />
        </javac>
        <!-- jndi.properties needs to be in the classpath, if it exists (not for glassfish) -->
        <copy file="${src.java}/jndi.properties" todir="${test.dir}" failonerror="false"/>
    </target>
	
    <target name="test:runws" depends="test:compilews,j2ee:assert-run" description="run JAXWS JUnit testcases">
    	<echo>Important: In order to run the tests you have performed a regular ant install, with AdminCA1, at some point and not changed the default administrator group.
    	</echo>
        <delete dir="${test.dir}/ws/reports" />
        <mkdir dir="${test.dir}/ws/reports/html" />
        <junit printsummary="yes" haltonfailure="no">
        	<jvmarg value="-Djava.endorsed.dirs=${jaxws.libdir}"/>
			<sysproperty key="testtype" value="WEB"/>
            <classpath>
                <path refid="jaxws.test.classpath" />
                <path location="${test.dir}" />
            </classpath>
            <formatter type="xml" />
        	<!-- we must use fork=yes or the BC JCE won't be authenticated due to some problem with ant classloading -->
            <batchtest fork="yes" todir="${test.dir}/ws/reports">
                <fileset dir="${test.dir}">
                    <include name="**/protocol/ws/TestEjbcaWS.class" />
                </fileset>
            </batchtest>
            <batchtest fork="yes" todir="${test.dir}/ws/reports">
                <fileset dir="${test.dir}">
                    <include name="**/protocol/ws/TestEjbcaWSNonAdmin.class" />
                </fileset>
            </batchtest>
        </junit>
        <junitreport todir="${test.dir}/ws/reports">
            <fileset dir="${test.dir}/ws/reports">
                <include name="TEST-*.xml" />
            </fileset>
            <report format="frames" todir="${test.dir}/ws/reports/html" />
        </junitreport>
    </target>
	
</project>
