<project name="cmssigner" default="cmssignermar" basedir="..">


       
<target name="cmssignermar" unless="buildMailSigner">
    <path id="cmssigner.build.classpath">
      <path refid="signserver.compile.classpath" />
      <path location="${build}" />
    </path>

    <taskdef name="mar" classname="org.signserver.anttasks.MarAntTask" 
      classpathref="cmssigner.build.classpath"/>
       
    <taskdef name="part" classname="org.signserver.anttasks.PartAntTask" 
      classpathref="cmssigner.build.classpath"/>
 
    <javac destdir="${build}" debug="on" includeantruntime="no" encoding="iso8859-1" target="${server.java.target}" source="${server.java.target}">
       <classpath refid="cmssigner.build.classpath" />
       <src path="${src.java}" /> 
       <include name="org/signserver/module/cmssigner/*.java"/>
    </javac>

	<jar jarfile="dist-server/cmssigner-module.jar">
		<fileset dir="${build}">
		    <include name="org/signserver/module/cmssigner/**"/>
		</fileset>
    </jar>
    <mar version="${mar.versions}" modulename="cmssigner" verbose="true" destfile="${basedir}/dist-server/cmssigner.mar">
        <part>
            <fileset dir="dist-server">
                <include name="cmssigner-module.jar"/>
            </fileset>
            <fileset dir="src/module-configs/cmssigner">
                <include name="*.properties"/>
            </fileset>
        </part>
    </mar>
</target>

</project>
