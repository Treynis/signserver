<?xml version = '1.0' encoding = 'ISO-8859-1'?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>Time Stamp Server Servlet Configuration</display-name>
    <servlet>
        <servlet-name>TSAHTTPServlet</servlet-name>
        <display-name>Time Stamp Server Servlet</display-name>
        <servlet-class>org.signserver.web.TSAHTTPServlet</servlet-class>
    </servlet> 
    <servlet>
        <servlet-name>PDFHTTPServlet</servlet-name>
        <display-name>PDF Signer Servlet</display-name>
        <servlet-class>org.signserver.web.PDFHTTPServlet</servlet-class>
    </servlet> 
    <servlet>
        <servlet-name>StartServiceServlet</servlet-name>
        <display-name>Servlet that starts up the services</display-name>
        <servlet-class>org.signserver.web.StartServicesServlet</servlet-class>  
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>TSAHTTPServlet</servlet-name>
        <url-pattern>/tsa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PDFHTTPServlet</servlet-name>
        <url-pattern>/pdf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartServiceServlet</servlet-name>
        <url-pattern>/startservices</url-pattern>
    </servlet-mapping>

  <ejb-local-ref>
    <ejb-ref-name>ejb/SignServerSessionLocal</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <local-home>org.signserver.ejb.SignSessionLocalHome</local-home>
    <local>org.signserver.ejb.SignSessionLocal</local>
    <ejb-link>SignServerSession</ejb-link>
  </ejb-local-ref>   
  <ejb-local-ref>
    <ejb-ref-name>ejb/ServiceTimerSessionLocal</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <local-home>org.signserver.ejb.IServiceTimerSessionLocalHome</local-home>
    <local>org.signserver.ejb.IServiceTimerSessionLocal</local>
    <ejb-link>ServiceTimerSession</ejb-link>
  </ejb-local-ref>   
</web-app>