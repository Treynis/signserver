<?xml version = '1.0' encoding = 'ISO-8859-1'?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>SignServer Server Servlet Configuration</display-name>

    <servlet>
        <servlet-name>GenericProcessServlet</servlet-name>
        <display-name>Generic Process Servlet</display-name>
        <servlet-class>org.signserver.web.GenericProcessServlet</servlet-class>
    </servlet> 
    <servlet>
        <servlet-name>StartServiceServlet</servlet-name>
        <display-name>Servlet that starts up the services</display-name>
        <servlet-class>org.signserver.web.StartServicesServlet</servlet-class>  
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenericProcessServlet</servlet-name>
        <url-pattern>/tsa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenericProcessServlet</servlet-name>
        <url-pattern>/pdf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenericProcessServlet</servlet-name>
        <url-pattern>/process</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartServiceServlet</servlet-name>
        <url-pattern>/startservices</url-pattern>
    </servlet-mapping>


</web-app>